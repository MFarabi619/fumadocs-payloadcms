{
  "name": "fumadocs-payloadcms",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "ri": "set -ex; git clean -fdX -e '!.env*'; pnpm i",
    "dev": "next dev",
    "lint": "eslint",
    "build": "next build",
    "clean": "rm -rf sqlite.db; rm -rf media",
    "test": "pnpm run test:int && pnpm run test:e2e",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "postinstall": "fumadocs-mdx",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap"
  },
  "dependencies": {
    "@libsql/client": "^0.15.10",
    "@payloadcms/db-sqlite": "3.69.0",
    "@payloadcms/next": "3.69.0",
    "@payloadcms/richtext-lexical": "3.69.0",
    "@payloadcms/storage-s3": "^3.69.0",
    "@payloadcms/storage-vercel-blob": "^3.69.0",
    "@payloadcms/ui": "3.69.0",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "fumadocs-core": "16.3.1",
    "fumadocs-mdx": "14.2.1",
    "fumadocs-ui": "16.3.1",
    "graphql": "^16.8.1",
    "libsql": "^0.5.20",
    "lucide-react": "^0.561.0",
    "next": "16.0.10",
    "payload": "3.69.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "sharp": "0.34.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "eslint-config-next": "16.0.10",
    "eslint": "^9.39.2",
    "@playwright/test": "1.56.1",
    "@testing-library/react": "16.3.0",
    "@vitejs/plugin-react": "4.5.2",
    "jsdom": "26.1.0",
    "playwright": "1.56.1",
    "playwright-core": "1.56.1",
    "prettier": "^3.4.2",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["sharp", "esbuild", "unrs-resolver"]
  },
  "optionalDependencies": {
    "@libsql/darwin-arm64": "0.5.20",
    "@libsql/linux-arm64-gnu": "0.5.20",
    "@libsql/linux-x64-gnu": "0.5.20"
  }
}
