{
  "name": "fumadocs-payloadcms",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "lint": "eslint",
    "build": "next build",
    "postinstall": "fumadocs-mdx",
    "test": "pnpm test:int && pnpm test:e2e",
    "clean": "rm -rf sqlite.db; rm -rf media",
    "ri": "set -ex; git clean -fdX -e '!.env*'; pnpm i",
    "start": "build; cross-env NODE_OPTIONS=--no-deprecation next start",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "types:check": "fumadocs-mdx && next typegen && tsc --noEmit",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "test:int": "cross-env NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "test:e2e": "cross-env NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" pnpm exec playwright test"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@payloadcms/db-sqlite": "3.75.0",
    "@payloadcms/next": "3.75.0",
    "@payloadcms/richtext-lexical": "3.75.0",
    "@payloadcms/storage-s3": "^3.75.0",
    "@payloadcms/storage-vercel-blob": "^3.75.0",
    "@payloadcms/ui": "3.75.0",
    "cross-env": "^10.1.0",
    "dotenv": "17.2.4",
    "fumadocs-core": "16.5.0",
    "fumadocs-mdx": "14.2.6",
    "fumadocs-ui": "16.5.0",
    "graphql": "^16.8.1",
    "libsql": "^0.5.20",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "payload": "3.75.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "0.34.5"
  },
  "devDependencies": {
    "@playwright/test": "1.58.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/react": "16.3.2",
    "@types/mdx": "^2.0.13",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "5.1.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "jsdom": "28.0.0",
    "playwright": "1.58.1",
    "playwright-core": "1.58.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "pnpm": "^9 || ^10"
  },
  "optionalDependencies": {
    "@libsql/darwin-arm64": "0.5.22",
    "@libsql/linux-arm64-gnu": "0.5.22",
    "@libsql/linux-x64-gnu": "0.5.22"
  }
}
